<!DOCTYPE html>
<head>
    <title>TRIVIUM | STORE</title>
    <meta name="description" content="This is the description" />
    <link rel="stylesheet" href="styles.css" />
    <script src="https://checkout.stripe.com/checkout.js" defer></script>
    <script>
        let stripePublicKey = '<%= stripePublicKey %>'
    </script>
    <script src="store.js" defer></script> <!--async sprawi ze strona bedzie sie ladowac pomimo nie zaladowania js-->
</head>
<body>
    <header class="main-header">
        <nav class="nav main-nav">
            <ul>
                <li><a href="index.html">HOME</a></li>
                <li><a href="Store.html">STORE</a></li>
                <li><a href="about.html">ABOUT</a></li>
            </ul>
        </nav>
        <h1 class="band-name band-name-large">TRIVIUM</h1>
        <div class="header-btn-container">          
    </header>
                        <!-- Shop items albums  --> 
    <section class="container content-section">
        <h2 class="section-header">MUSIC</h2>

        <div class="shop-items">
            <% items.music.forEach((item) => { %>
                <div class="shop-item" data-item-id="<%= item.id %>">           
                    <span class="shop-item-title"><%= item.name %></span>           
                    <img class="shop-item-image" src="/images/<%= item.imgName %>">
                    <div class="shop-item-details">
                        <span class="shop-item-price">$<%= item.price / 100 %></span>
                        <button class="btn btn-primary shop-item-button" role="button">ADD TO CART</button>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
                        <!-- Merch --> 

    <section class="container content-section">
        <h2 class="section-header" >MERCH</h2>
            <div class="shop-items">
                <% items.merch.forEach((item) => { %>
                    <div class="shop-item" data-item-id="<%= item.id %>">           
                        <span class="shop-item-title"><%= item.name %></span>           
                        <img class="shop-item-image" src="/images/<%= item.imgName %>">
                        <div class="shop-item-details">
                            <span class="shop-item-price">$<%= item.price / 100 %></span>
                            <button class="btn btn-primary shop-item-button" role="button">ADD TO CART</button>
                        </div>
                    </div>
                <% }) %>
            </div>
    </section>
                        
    <section class="container content-section">
        <h2 class="section-header">CART</h2>

        <div class="cart-row">
            <span class="cart-item cart-header cart-column">ITEM</span>          
            <span class="cart-price cart-header cart-column">PRICE</span>            
            <span class="cart-quantity cart-header cart-column">QUANTITY</span>
        </div>

    <div class="cart-items">
        
    </div>
        <hr>

        <div class="cart-total">
            <strong class="cart-total-title">TOTAL</strong>
            <span class="cart-total-price">$0.00</span>
        </div>
            <button class="btn btn-primary btn-purchase" role ="button">PURCHASE</button>
    </section>

    
        <footer class="main-footer">
            <div class="main-footer-container">
                <h3 class="band-name">TRIVIUM</h3>
                <ul class="nav footer-nav">
                    <li>
                        <a href="https://youtube.com/" target="_blank">
                            <img src="https://cdn-icons-png.flaticon.com/512/124/124015.png" width="40">
                        </a>
                    </li>
                    <li>
                        <a href="facebook.com"target="_blank">
                            <img src="https://cdn-icons-png.flaticon.com/512/1384/1384053.png" width="40">
                        </a>
                    </li>
                    <li>
                        <a href="spotify.com"target="_blank">
                            <img src="https://cdn-icons-png.flaticon.com/512/174/174872.png" width="40"> 
                        </a>
                    </li>
                </ul>
            </div>
        </footer>
</body>